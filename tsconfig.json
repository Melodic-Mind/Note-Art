{
  "compilerOptions": {
    "outDir": "lib",
    "noImplicitAny": true,
    "module": "ES2020",
    "target": "ES6",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "lib": [
      "ES2016"
    ],
    "listEmittedFiles": false,
    "listFiles": false,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noEmit": false,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "src/notation"
  ],
  "include": [
    "src"
  ],
  "tsdocsOptions": {
    "entryPoints": [
      "./src/index.ts"
    ],
    "out": "./docs",
    "name": "Note-Art",
    "customPages": "./docPages"
  }
}